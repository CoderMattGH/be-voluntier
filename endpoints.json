{
  "GET /api": {
    "description": "Serves up a JSON representation of all the available endpoints of the API"
  },
  "POST /api/login": {
    "description": "Allows the volunter/organisation user to login",
    "requestBody": {
      "email": "useremail@email.com",
      "password": "userpassword",
      "role": "'volunteer' or 'organisation'"
    },
    "exampleResponseForVolunteerLogin": {
      "user": {
        "vol_id": 1,
        "vol_email": "mattydemail@email.com",
        "vol_first_name": "Matt",
        "vol_last_name": "Dixon",
        "vol_contact_tel": "98239238928392",
        "vol_avatar": null,
        "vol_bio": "HELLO I AM MATT :o",
        "vol_hours": 1000,
        "role": "volunteer"
      }
    },
    "exampleResponseForOrganisationLogin": {
      "user": {
        "org_id": 1,
        "org_name": "Oxfam",
        "org_email": "oxfam@email.com",
        "org_type": 2,
        "org_contact_tel": "923892238923",
        "org_bio": "Oxfam is a British-founded confederation of 21 independent non-governmental organizations (NGOs).",
        "org_avatar": null,
        "org_verified": true,
        "role": "organisation"
      }
    }
  },
  "DELETE /api/logout": {
    "description": "Allows the volunteer/organisation user to logout. Returns an empty body with 200 OK if successful"
  },
  "GET /api/org/:org_user_id": {
    "authRequired": true,
    "description": "Serves an organisation user object for the specified org_user_id. Must be logged in and have the same org_user_id",
    "exampleResponse": {
      "org_user": {
        "org_id": 1,
        "org_name": "Oxfam",
        "org_email": "oxfam@email.com",
        "org_type": 2,
        "org_contact_tel": "923892238923",
        "org_bio": "Oxfam is a British-founded confederation of 21 independent non-governmental organizations (NGOs).",
        "org_avatar": null,
        "org_verified": true
      }
    }
  },
  "GET /api/vol/:vol_user_id": {
    "authRequired": true,
    "description": "Serves a volunteer user object for the specified vol_user_id. Must be logged in and have the same vol_user_id",
    "exampleResponse": {
      "vol_user": {
        "vol_id": 1,
        "vol_email": "mattydemail@email.com",
        "vol_first_name": "Matt",
        "vol_last_name": "Dixon",
        "vol_contact_tel": "98239238928392",
        "vol_avatar": null,
        "vol_bio": "HELLO I AM MATT :o",
        "vol_hours": 1000,
        "vol_badges": null
      }
    }
  },
  "GET /api/listings": {
    "description": "Serves up an array of all the visible volunteer listings",
    "queries": [
      "sort_by [duration, date]",
      "order [asc, desc]",
      "search [string]",
      "visible [true/false]"
    ],
    "exampleResponse": {
      "listings": [
        {
          "list_id": 1,
          "list_title": "Community Garden Cleanup",
          "list_location": "SW1A 1AA",
          "list_longitude": -0.1246,
          "list_latitude": 51.5014,
          "list_date": "2024-06-30T23:00:00.000Z",
          "list_time": "09:00:00",
          "list_duration": 4,
          "list_description": "Description text...",
          "list_img": null,
          "list_org": 1,
          "org_name": "Oxfam",
          "org_avatar": null
        }
      ]
    }
  },
  "GET /api/listings/:listing_id": {
    "description": "Serves up an object containing details on the volunteer whose id matches id passed as parametric endpoint",
    "exampleResponse": {
      "listing": {
        "list_id": 1,
        "list_title": "Community Garden Cleanup",
        "list_location": "SW1A 1AA",
        "list_longitude": -0.1246,
        "list_latitude": 51.5014,
        "list_date": "2024-06-30T23:00:00.000Z",
        "list_time": "09:00:00",
        "list_duration": 4,
        "list_description": "Description text...",
        "list_img": null,
        "list_org": 1,
        "org_name": "Oxfam",
        "org_avatar": null
      }
    }
  },
  "GET /api/applications/:app_id": {
    "authRequired": true,
    "description": "Serves up an object containing details on the application whose id matches id passed as parametric endpoint.  Only viewable by the organisation or volunter user",
    "exampleResponse": {
      "application": {
        "app_id": 1,
        "vol_id": 1,
        "org_id": 2,
        "listing_id": 3,
        "prov_confirm": false,
        "full_conf": false
      }
    }
  },
  "GET /api/badges": {
    "description": "Serves up an array of all the different badge types",
    "exampleResponse": {
      "badges": [
        {
          "badge_id": 1,
          "badge_name": "1 Hour",
          "badge_img_path": "./images/badges/01.png",
          "badge_points": 100
        },
        {
          "badge_id": 2,
          "badge_name": "10 Hours",
          "badge_img_path": "./images/badges/02.png",
          "badge_points": 300
        }
      ]
    }
  },
  "GET /api/badges/:vol_user_id": {
    "authRequired": "true",
    "description": "Serves up an array of the specified volunteer user's badges.  Must be logged in as specified user",
    "exampleResponse": {
      "badges": [
        {
          "badge_id": 1,
          "vol_id": 1,
          "badge_name": "1 Hour",
          "badge_img_path": "./images/badges/01.png",
          "badge_points": 100
        },
        {
          "badge_id": 2,
          "vol_id": 1,
          "badge_name": "10 Hours",
          "badge_img_path": "./images/badges/02.png",
          "badge_points": 300
        }
      ]
    }
  },
  "GET /api/leaderboard": {
    "description": "Serves up an array of objects that represents the top 10 users by badge points, with each object containing basic information on the user alongside number of points. Limited to 10 users, and sorted by points descending",
    "exampleResponse": {
      "leaderboard": [
        {
          "vol_first_name": "Matt",
          "vol_last_name": "Dixon",
          "vol_avatar": null,
          "points": "10400"
        },
        {
          "vol_first_name": "Sophie",
          "vol_last_name": "Davis",
          "vol_avatar": null,
          "points": "9500"
        }
      ]
    }
  },
  "GET /api/skills": {
    "description": "Serves up an array of all skills that a volunteer might need to take part in a volunteering opportunity",
    "exampleResponse": {
      "skills": [
        "Physical Work",
        "Teamwork",
        "Gardening",
        "Running",
