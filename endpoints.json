  "GET /api/applications/": {
    "authRequired": true,
    "description": "Allows users to fetch applications",
    "queries": ["list_id"],
    "exampleResponse": {
      "application": {
        "app_id": 9,
        "vol_id": 1,
        "listing_id": 4,
        "prov_confirm": false,
        "full_conf": false
      }
    }
  },
  "POST /api/applications/": {
    "authRequired": true,
    "description": "Allows the volunteer user to apply for a listing.",
    "requestBody": { "listing_id": "number", "vol_user_id": "number" },
    "exampleResponse": {
      "application": {
        "app_id": 9,
        "vol_id": 1,
        "listing_id": 4,
        "prov_confirm": false,
        "full_conf": false
      }
    }
  },
  "GET /api/applications/:app_id": {
    "authRequired": true,
    "description": "Serves up an object containing details on the application whose id matches :app_id.  Only viewable by the organisation or volunter user.",
    "exampleResponse": {
      "application": {
        "app_id": 1,
        "vol_id": 1,
        "org_id": 2,
        "listing_id": 3,
        "prov_confirm": false,
        "full_conf": false,
        "list_title": "Charity Fun Run",
        "list_location": "E1 6AN",
        "list_longitude": -0.0722,
        "list_latitude": 51.5165,
        "list_date": "2024-07-03",
        "list_time": "08:00:00",
        "list_description": "Join our charity fun run to raise funds for local schools. Whether you're a seasoned runner or a beginner, everyone is welcome to participate.",
        "list_img_id": null,
        "org_name": "Red Cross"
      }
    }
  },
  "DELETE /api/applications/:app_id": {
    "authRequired": true,
    "description": "Allows the relevant volunteer user or organisation user to withdraw an application.",
    "exampleResponse": {
      "application": {
        "app_id": 7,
        "vol_id": 1,
        "listing_id": 4,
        "prov_confirm": false,
        "full_conf": false
      }
    }
  },
  "PATCH /api/applications/:app_id": {
    "authRequired": true,
    "description": "Allows an organisation user to PROVISIONALLY confirm an application.",
    "requestBody": { "accept": "true/false [boolean]" },
    "exampleResponse": {
      "application": {
        "app_id": 6,
        "vol_id": 5,
        "listing_id": 1,
        "prov_confirm": true,
        "full_conf": false
      }
    }
  },
  "PATCH /api/applications/:app_id/confirm": {
    "authRequired": true,
    "description": "Allows an organisation user to FULLY confirm an application.  Application must already be provisionally accepted.",
    "requestBody": { "confirm": "true" },
    "exampleResponse": {
      "application": {
        "app_id": 6,
        "vol_id": 5,
        "listing_id": 1,
        "prov_confirm": true,
        "full_conf": true
      }
    }
  },
