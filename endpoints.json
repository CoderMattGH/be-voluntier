{
  "GET /api": {
    "description": "Serves up a JSON representation of all the available endpoints of the API"
  },
  "GET /api/listings": {
    "description": "Serves up an array of all the visible volunteer listings",
    "queries": [
      "sort_by [duration, date]",
      "order [asc, desc]",
      "visible [true/false]"
    ],
    "exampleResponse": {
      "listings": [
        {
          "list_id": 1,
          "list_title": "Community Garden Cleanup",
          "list_location": "SW1A 1AA",
          "list_longitude": -0.1246,
          "list_latitude": 51.5014,
          "list_date": "2024-06-30T23:00:00.000Z",
          "list_time": "09:00:00",
          "list_duration": 4,
          "list_description": "Description text...",
          "list_img": null,
          "list_org": 1,
          "org_name": "Oxfam",
          "org_avatar": null
        }
      ]
    }
  },
  "GET /api/listings/:listing_id": {
    "description": "Serves up an object containing details on the volunteer whose id matches id passed as parametric endpoint",
    "exampleResponse": {
      "listing": {
        "list_id": 1,
        "list_title": "Community Garden Cleanup",
        "list_location": "SW1A 1AA",
        "list_longitude": -0.1246,
        "list_latitude": 51.5014,
        "list_date": "2024-06-30T23:00:00.000Z",
        "list_time": "09:00:00",
        "list_duration": 4,
        "list_description": "Description text...",
        "list_img": null,
        "list_org": 1,
        "org_name": "Oxfam",
        "org_avatar": null
      }
    }
  },
  "GET /api/applications/:app_id": {
    "description": "Serves up an object containing details on the application whose id matches id passed as parametric endpoint",
    "exampleResponse": {
      "applications": {
        "app_id": 1,
        "vol_id": 1,
        "listing_id": 3,
        "prov_confirm": false,
        "full_conf": false
      }
    }
  }
}
